{
  "name": "vue_testplanegame",
  "version": "0.0.2",
  "private": false,
  "main": "electron/main.js",
  "author": "xiang.xi",
  "description":"this is my planegame, enjoy~",
  "scripts": {
    "dev": "vite",
    "electron:dev": "electron .",
    "electron:build": "electron-builder build",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "cnpm": "^9.4.0",
    "element-plus": "^2.7.6",
    "lodash": "^4.17.21",
    "pinia": "^2.1.7",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue": "^3.4.29",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "nodemon": "^3.1.4",
    "npm-run-all2": "^6.2.0",
    "typescript": "~5.4.0",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.2",
    "vite": "^5.3.1",
    "vue-tsc": "^2.0.21"
  },
  "build": {
    "appId": "com.demo.planeGameApp",
    "productName": "planeGameApp",
    "copyright": "Copyright Â© 2024 <your-name>",
    "win": {
      "icon":"./favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine":true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "dist_electron_3"
    }
  }
}
